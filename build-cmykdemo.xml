<?xml version="1.0" encoding="UTF-8"?>
<!-- Builds the "JHotDraw BezierDemo" demo application and demo applet. -->
<project name="build-CMYKDemo" default="all" basedir=".">
    <target name="init">
        <property name="libdir" value="lib"/>
        <property name="srcdir.main" value="src/main"/>
        <property name="srcdir.demo" value="src/demo/cmykdemo"/>
        <property name="rscdir" value="resources"/>
        <property name="builddir" value="build"/>
        <property name="classdir" value="${builddir}/classes"/>
        <property name="distdir" value="dist/CMYKDemo"/>
        <property name="author" value="Werner Randelshofer"/>
        <property name="version" value="2.0.2"/>
        <property name="versionDate" value="2017-08-07"/>
        <property name="versionLong" value="${version}"/>
        <property name="versionLong" value="${version} ${versionDate}"/>
    </target>
    <target name="clean" depends="init">
        <delete dir="${classdir}" />
    </target>
    <target name="application.compile" depends="init,clean">
        <mkdir dir="${classdir}"/>
        <!--
                fork="yes"
                executable="/usr/bin/javac"
        -->
        <javac
                destdir="${classdir}"
                srcdir="${srcdir.main}:${srcdir.demo}"
                debug="true"
                source="1.8"
                target="1.8"
                optimize="true"
                encoding="UTF-8"
                includeantruntime="false"
         >
          <compilerarg value="-Xlint"/>
            <include name="org/monte/cmykdemo/MainFX.java"/> 
            <include name="org/monte/media/jpeg/CMYK*.java"/> 
            <include name="org/monte/media/jpeg/JPEGImageIO.java"/> 
        </javac>
        <echo file="${classdir}/META-INF/services/javax.imageio.spi.ImageReaderSpi"
>org.monte.media.jpeg.CMYKJPEGImageReaderSpi
</echo>
    </target>
    <target name="application.jar" depends="init,application.compile">
        <mkdir dir="${distdir}"/>
        <copy file="${rscdir}/cmykdemo_license.html" tofile="${classdir}/license.html" />
        <jar destfile="${distdir}/CMYKDemo-${version}.jar" basedir="${classdir}">
            <manifest>
                <attribute name="Built-By" value="${author}"/>
                <attribute name="Main-Class" value="org.monte.cmykdemo.MainFX"/>
                <attribute name="Implementation-Version" value="${versionLong}"/>
            </manifest>
        </jar>
    </target>
    <target name="application.run" depends="init">
        <java fork="true" classpath="${classdir}" classname="org.monte.cmykdemo.Main">
            <jvmarg value="-Xmx1024m"/>
            <jvmarg value="-Dsun.java2d.cmm=sun.java2d.cmm.kcms.KcmsServiceProvider"/>
        </java>
    </target>
    <target name="application.run-jar" depends="init">
        <java fork="true" jar="${distdir}/CMYKDemo-${version}.jar">
            <jvmarg value="-Xdock:name=CMYKDemo"/>
            <jvmarg value="-Dlocale=en"/>
            <jvmarg value="-Xmx512m"/>
            <jvmarg value="-Dsun.java2d.cmm=sun.java2d.cmm.kcms.KcmsServiceProvider"/>
            <jvmarg value="-Djava.library.path=${libdir}"/>
        </java>
    </target>
    <target name="application.exec-jar" depends="init">
      <exec executable="/usr/bin/java">
        <arg value="-Dsun.java2d.cmm=sun.java2d.cmm.kcms.KcmsServiceProvider"/>
        <arg value="-jar"/>
        <arg value="${distdir}/CMYKDemo-${version}.jar"/>
      </exec>
    </target>
    <target name="dist" depends="init,application.jar">
    </target>
</project>
